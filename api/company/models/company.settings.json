{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "name": "Company"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "small_1_to_50",
        "medium_51_to_250",
        "large_251_and_more"
      ]
    },
    "website_url": {
      "type": "string",
      "maxLength": 255,
      "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
    },
    "contact_email": {
      "type": "email",
      "maxLength": 255
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "jobs": {
      "via": "company",
      "collection": "job"
    }
  }
}
